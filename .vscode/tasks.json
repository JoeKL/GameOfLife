{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++.exe build active file",
			"command": "C:\\mingw-w64\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"${workspaceFolder}/include/*",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-static-libgcc"
			],
			"options": {
				"cwd": "C:\\mingw-w64\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"isBackground": false
		}
	]
}